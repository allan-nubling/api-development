{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "build",
        "rootDir": "./src",
        "removeComments": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "typeRoots": ["./node_modules/@types", "src/types"],
        "baseUrl": ".",
        "paths": {
            "@config/*": ["./src/config/*"],
            "@jobs/*": ["./src/jobs/*"],
            "@services/*": ["./src/services/*"],
            "@models/*": ["./src/models/*"],
            "@utils/*": ["./src/utils/*"],
            "@controllers/*": ["./src/controllers/*"]
        }
    },
    "include": ["src/**/*"]
}
